{
  "dashboard": {
    "title": "Database Monitoring Dashboard",
    "tags": ["database", "postgresql", "connection-pool", "performance"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Connection Pool Status",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "db_pool_active_connections{database=\"metrics_db\"}",
            "refId": "A",
            "legendFormat": "Active"
          },
          {
            "expr": "db_pool_idle_connections{database=\"metrics_db\"}",
            "refId": "B",
            "legendFormat": "Idle"
          },
          {
            "expr": "db_pool_total_connections{database=\"metrics_db\"}",
            "refId": "C",
            "legendFormat": "Total"
          },
          {
            "expr": "db_pool_max_connections{database=\"metrics_db\"}",
            "refId": "D",
            "legendFormat": "Max"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 15, "color": "yellow"},
                {"value": 18, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Pool Utilization",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "(db_pool_total_connections{database=\"metrics_db\"} / db_pool_max_connections{database=\"metrics_db\"}) * 100",
            "refId": "A",
            "legendFormat": "Pool Utilization %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 70, "color": "yellow"},
                {"value": 85, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Waiting Connections",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "db_pool_waiting_count{database=\"metrics_db\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Database Health",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "db_health_status{database=\"metrics_db\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "mappings": [
              {"type": "value", "options": {"0": {"text": "Unhealthy", "color": "red"}, "1": {"text": "Healthy", "color": "green"}}}
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Connection Pool Over Time",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "db_pool_active_connections{database=\"metrics_db\"}",
            "refId": "A",
            "legendFormat": "Active"
          },
          {
            "expr": "db_pool_idle_connections{database=\"metrics_db\"}",
            "refId": "B",
            "legendFormat": "Idle"
          },
          {
            "expr": "db_pool_total_connections{database=\"metrics_db\"}",
            "refId": "C",
            "legendFormat": "Total"
          },
          {
            "expr": "db_pool_max_connections{database=\"metrics_db\"}",
            "refId": "D",
            "legendFormat": "Max"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "axisLabel": "Connections",
              "axisPlacement": "auto"
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Query Duration (p95, p99)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(db_query_duration_seconds_bucket{database=\"metrics_db\", status=\"success\"}[5m]))",
            "refId": "A",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(db_query_duration_seconds_bucket{database=\"metrics_db\", status=\"success\"}[5m]))",
            "refId": "B",
            "legendFormat": "p99"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 7,
        "title": "Query Rate by Type",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "rate(db_query_total{database=\"metrics_db\", status=\"success\"}[5m])",
            "refId": "A",
            "legendFormat": "{{query_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 8,
        "title": "Query Errors",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "rate(db_query_total{database=\"metrics_db\", status=\"error\"}[5m])",
            "refId": "A",
            "legendFormat": "{{query_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 9,
        "title": "Slow Queries",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "increase(db_slow_query_total{database=\"metrics_db\"}[5m])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 10, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "title": "Connection Acquisition Time",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 9, "x": 6, "y": 24},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(db_connection_acquisition_seconds_bucket{database=\"metrics_db\"}[5m]))",
            "refId": "A",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(db_connection_acquisition_seconds_bucket{database=\"metrics_db\"}[5m]))",
            "refId": "B",
            "legendFormat": "p99"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 11,
        "title": "Connection Errors",
        "type": "stat",
        "gridPos": {"h": 8, "w": 9, "x": 15, "y": 24},
        "targets": [
          {
            "expr": "increase(db_connection_errors_total{database=\"metrics_db\"}[5m])",
            "refId": "A",
            "legendFormat": "{{error_type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "green"},
                {"value": 1, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 12,
        "title": "Database Response Time",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "db_response_time_seconds{database=\"metrics_db\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 13,
        "title": "Query Duration Distribution",
        "type": "heatmap",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "targets": [
          {
            "expr": "rate(db_query_duration_seconds_bucket{database=\"metrics_db\", status=\"success\"}[5m])",
            "refId": "A",
            "format": "heatmap",
            "legendFormat": "{{le}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "spectrum"}
          }
        }
      }
    ]
  }
}


