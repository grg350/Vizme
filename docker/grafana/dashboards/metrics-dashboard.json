{
  "dashboard": {
    "title": "Metrics Dashboard",
    "tags": ["metrics"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Total Metrics",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "count({__name__=~\".+\"})",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Metrics Over Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 18, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "rate({__name__=~\".+\"}[5m])",
            "refId": "A",
            "legendFormat": "{{__name__}}"
          }
        ]
      }
    ]
  }
}
